<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6D6666"/> <!-- Cor da sombra (cinza claro) -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Fundo com borda -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor do fundo (branco) -->
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Borda cinza clara -->
        </shape>
    </item>
</layer-list>
