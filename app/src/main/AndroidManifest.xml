        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ELAS"
        tools:targetApi="31">
        <activity android:name=".telacursos_off" android:exported="false"/>
        <activity android:name=".telaeventos" android:exported="false"/>
